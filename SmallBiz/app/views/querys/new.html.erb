<h1> Queries</h1>


<%= form_for :query, url: querys_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p> How old are you? </p>
<%= radio_button_tag(:age, "child") %>
  <%= label_tag(:age_child, "I am younger than 21") %>
  <%= radio_button_tag(:age, "adult") %>
  <%= label_tag(:age_adult, "I'm over 21") %>
 
   <p>Ranking greater than 6? </p>
<%= radio_button_tag(:rank, "rank_g") %>
  <%= label_tag(:rank_g, "Yes, rank greater than 6") %>
  <%= radio_button_tag(:rank, "rank_l") %>
  <%= label_tag(:rank_l, "No, rank less than 6") %>
 
 
  <p>
    <%= f.submit %>
  </p>
<% end %>